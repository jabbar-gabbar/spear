
https://linuxize.com/post/how-to-mount-cifs-windows-share-on-linux/
sudo apt update

sudo apt install cifs-utils

sudo mkdir /mnt/big_dipti

sudo mount -t cifs -o username=tarang //192.168.1.7/dipti /mnt/big_dipti

df -h

/etc/win-credentials
username=user
password=password
domain=domain


sudo chown root: /etc/win-credentials
sudo chmod 600 /etc/win-credentials

sudo mount -t cifs -o credentials=/etc/win-credentials,dir_mode=0755,file_mode=0755 //WIN_SHARE_IP/<share_name> /mnt/win_share
sudo mount -t cifs -o credentials=/etc/win-credentials,uid=1000,gid=1000,dir_mode=0755,file_mode=0755 //WIN_SHARE_IP/<share_name> /mnt/win_share


sudo mkdir /mnt/big_dipti
sudo mkdir /mnt/big_tarang
sudo mkdir /mnt/big_ipad
sudo mkdir /mnt/big_nikon


sudo nano /etc/fstab


